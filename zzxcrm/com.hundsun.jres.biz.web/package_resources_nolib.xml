<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>resources_nolib</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>war</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/webapp/bizframe</directory>
			<outputDirectory>bizframe</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/webapp/template</directory>
			<outputDirectory>template</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>target/${project.artifactId}-${project.version}/META-INF/com.hundsun.jres.bizframe.web.version.txt</source>
			<outputDirectory>META-INF</outputDirectory>
		</file>
	</files>
</assembly>
